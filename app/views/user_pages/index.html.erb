
<div class=" container">
  <div class ="col-lg-6">
  <div  style="position:">
  <img src = "<%= current_user.image.url%>" style ="max-height:180px;border-radius: 48%/50%;">
  <h2><strong><%= current_user.first_name%></strong></h2>
  <div class="post">
  <h3>Let's do a post</h3>
  <%= render 'form'%>
  </div>
  </div>
  <div class="col-lg-6">
  <h2>Posts</h2>
    <%@user_pages.each do |user_page|%>
      <div class ="panel panel-primary">
          <div class="panel-heading">
            <span>
            <% @id = user_page.user_id %>
            <%@img  = User.find(@id)%>
             <img src= "<%= @img.image.url %> " style ="max-height: 25px;">
              <%= user_page.name%>
              </span>
          </div>
          <div class="panel-body">
              <p><%= user_page.post%></p>
              <div class="panel mode">sdfsdfsdf</div>
                <%= link_to " #{user_page.like}  Likes", "#",:onclick => "return $.fn.update_like(this,#{user_page.id});", id: "like_#{user_page.id}"%>
                <%= link_to "Comment", "#", :id=>"comment" %> &nbsp;&nbsp;
              <div class ='box' style="display:none;">
                 <%= render :partial => "comments/comment" %>
              </div>
               <div style ='float:right'>
                 <% if current_user.id == user_page.user_id %>
                     <span><%= link_to 'Delete post', user_page, method: :delete, data: { confirm: 'Are you sure?' } %></span>&nbsp;&nbsp;&nbsp;
                     <span><%= link_to 'Edit post', edit_user_page_path(user_page) %></span>
                    <%end%>
                </div>

          </div>

      </div>
    <%end%>
  </div>
</div>